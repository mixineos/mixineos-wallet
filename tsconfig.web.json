{
    "compilerOptions": {
        "target": "es2020",
        "module": "CommonJS",
        "outDir": "dist",
        "alwaysStrict": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": false,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "lib": [
            "es2020",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.css"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/tests/"
    ]
}
